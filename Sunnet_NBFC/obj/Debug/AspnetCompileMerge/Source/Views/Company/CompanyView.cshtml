
@{ ViewBag.Title = "CompanyView";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Company View</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Company View</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@{int i = 0;}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>S.No.</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Country</th>
                                    <th>Pincode</th>
                                    <th>PANNo</th>
                                    <th>GSTNo</th>
                                    <th>CompanyType</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.lst)
                                {

                    <tr>
                        <td>@(++i)</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.Country</td>
                        <td>@item.Pincode</td>
                        <td>@item.PANNo</td>
                        <td>@item.GSTNo</td>
                        <td>@item.CompanyType</td>
                        <td>
                            <div class="d-flex order-actions">
                                <a href="@Url.Action("Companydelete", "Company", new { Id = @item.CompanyID })"
                                   data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Edit"><u>Edit</u></a>

                            </div>

                        </td>

                    </tr>}


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Company Id</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Country</th>
                                    <th>Pincode</th>
                                    <th>PANNo</th>
                                    <th>GSTNo</th>
                                    <th>CompanyType</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="card-footer">
                            @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
