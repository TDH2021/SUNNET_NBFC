
@{
    ViewBag.Title = "LeadView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Lead View</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Lead View</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                   
                    <!-- /.card -->
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Contact No</th>
                                        <th>Gender</th>
                                        <th>Service </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                 @foreach (var item in ViewBag.LeadDetails)
                                 {
                                     <tr>
                                         <td>@item.CustName</td>
                                         <td>@item.CustContNo</td>
                                         <td>@item.CustGender</td>
                                         <td>@item.ServiceName</td>
                                         <td>
                                             @*@Html.ActionLink("Edit", "EditEmpDetails", new { id = @item.LeadId }) |
                                             @Html.ActionLink("Delete", "DeleteEmp", new { id = @item.LeadId }, new { onclick = "return confirm('Are sure wants to delete?');" })*@
                                             @Html.ActionLink("Display", "LeadDisplay", new { id = @item.LeadId }) 
                                         </td>
                                     </tr>
                                 }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Customer Name</th>
                                        <th>Contact No</th>
                                        <th>Gender</th>
                                        <th>Service </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div class="card-footer">
                               @Html.ActionLink("Export to Excel", "ExportToExcel", new { @class = "btn btn-primary" }) 
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>


